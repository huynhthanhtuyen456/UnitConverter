<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.UnitConverter" parent="Base.Theme.UnitConverter" />
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/my_app_primary_color</item>
            <item name="colorPrimaryVariant">@color/my_app_primary_variant_color</item>
            <item name="colorOnPrimary">@color/white</item>
        </style>

        <style name="UnitConverter.TextView.Label" parent="Widget.AppCompat.TextView">
            <item name="android:layout_marginTop">8dp</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        </style>

        <style name="UnitConverter.Spinner" parent="Widget.AppCompat.Spinner.Underlined">
            <item name="android:layout_marginStart">8dp</item>
        </style>

        <!-- Example of a theme with no action bar -->
        <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>
</resources>